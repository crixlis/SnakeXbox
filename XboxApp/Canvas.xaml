<Page
    x:Class="XboxApp.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:XboxApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid x:Name="Canvas" Background="Green" BorderBrush="DarkSeaGreen" BorderThickness="5">
        <TextBlock Text="" Style="{StaticResource TitleTextBlockStyle}" Foreground="White" TextAlignment="Center" VerticalAlignment="Center"></TextBlock>
        <TextBlock x:Name="scoreText" Text="Score" Foreground="White" Margin="20,10,0,0" FontSize="24"></TextBlock>
        <TextBlock x:Name="score" Text="0" Foreground="Black" Margin="20,40,0,0" FontSize="24"></TextBlock>
        <TextBlock x:Name="playerNameText" Text="Playername" Foreground="White" Margin="0,10,20,0" FontSize="24" HorizontalAlignment="Right"></TextBlock>
        <TextBlock x:Name="playerName" Text="yourname" Foreground="Black" Margin="0,40,20,0" FontSize="24" HorizontalAlignment="Right"></TextBlock>
        <Button x:Name="Snake" Content="" HorizontalAlignment="Center" Width="20" Height="20"/>
    </Grid>
</Page>
